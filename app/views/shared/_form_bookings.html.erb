<%= simple_form_for [@car, @booking] do |f| %>
  <div class="row justify-content-center">
    <div class="col-12">
          <%= f.input :pickup_date, as: :date,
                                        start_year: Date.today.year - 90,
                                        end_year: Date.today.year - 12,
                                        order: [:day, :month, :year],
                                        html5: true,
                                        class: "field-date-input"
                                        %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12">
          <%= f.input :dropoff_date, as: :date,
                                        start_year: Date.today.year - 90,
                                        end_year: Date.today.year - 12,
                                        order: [:day, :month, :year],
                                        html5: true,
                                        class: "field-date-input"
                                        %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12">
      <%= f.button :submit, "Book this car", class: "btn btn-primary w-100" %>
    </div>
  </div>

<% end %>
