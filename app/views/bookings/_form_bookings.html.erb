<%= simple_form_for [@car, @booking] do |f| %>

    <div class="row justify-content-center">
      <div class="col-4">
        <%= f.input :pickup_date, placeholder: "Ex: 01.02.2023" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-4">
        <%= f.input :dropoff_date, placeholder: "Ex: 16.02.2023" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-4">
        <%= f.button :submit, "Reserve", class: "btn btn-primary" %>
      </div>
    </div>

<% end %>
